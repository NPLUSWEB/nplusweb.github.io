.top{
  height: 458rpx;
  background: url(http://html.nplusgroup.com/html/sanghb/wxxcx/img/top.jpg) no-repeat center top;
  background-size: 100% auto;
}
.login-form{
  padding: 0 80rpx;
}
.login-form input{
  padding: 20rpx 0 20rpx 80rpx;
  margin-bottom: 40rpx;
  border-bottom: 2rpx solid #dcdcdc;
  position:relative;
}
.login-form input:after{
  content: "";
  display: block;
  position: absolute;
  left: 0;
  top:50%;
  transform: translate(0,-50%);
  width: 50rpx;
  height: 50rpx;
  background: url(http://html.nplusgroup.com/html/sanghb/wxxcx/img/ico.png) no-repeat;
  background-size: 50rpx;
}
.login-form input.id:after{
  background-position: 0 0;
}
.login-form input.password:after{
  background-position: 0 -50rpx;
}
button{
  color: #fff;
  background: #21d092;
}